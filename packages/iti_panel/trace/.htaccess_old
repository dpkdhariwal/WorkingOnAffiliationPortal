<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # 1️⃣ Allow Node.js API (Passenger handles this)
  # Skip rewrite for anything starting with /api
  RewriteCond %{REQUEST_URI} ^/api [NC]
  RewriteRule ^ - [L]
  # 2️⃣ Standard React SPA routing
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
